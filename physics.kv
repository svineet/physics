
<PhysicsWidget>:

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1

        Rectangle:
            pos: self.pos
            size: self.size


    PhysicsGame:
        id: game
        toolbox: toolbox

        size: root.size
        pos: 0, 0


    AnchorLayout:
        id: toolbox_area

        size: root.width, root.height/10
        pos: 0, root.height-self.height
        padding: 2
        
        anchor_x: "left"
        anchor_y: "top"

        canvas:
            Color:
                rgba: [1, 1, 0, 1]
            Rectangle:
                pos: self.pos
                size: self.size

        ToolBox:
            id: toolbox
            pos_hint: None, None
